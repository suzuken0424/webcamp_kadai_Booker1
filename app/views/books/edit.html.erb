<!DOCTYPE html>
<html>
  <body>
    <h1>Editing Book</h1>
    <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |book| %>
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <div class="field">
      <label for=book_title>Title</label>
      <%= book.text_field :title %>
    </div>

    <div class="field">
      <label for=book_title>Body</label>
      <%= book.text_area :body %>
    </div>

    <div class="action">
      <%= book.submit 'Update Book' %>
    </div>

    <%= link_to "Show", "/books/#{@book.id}" %> | <%= link_to "Back", "/books" %>
    <% end %>
  </body>
</html>